<div class="jumbotron">
  <center>
    <h1>Hello, world!</h1>
    <p>Find the best local buisnesses with this website.</p>
    <p><a class="btn btn-warning btn-lg" href="#" role="button">Learn more</a></p>
  </center>  
</div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Website</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.title %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone %></td>
          <td><%= restaurant.website %></td>
          <td><%= link_to 'Show', restaurant, class:"btn btn-link" %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class:"btn btn-link" %></td>
          <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-link" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Restaurant', new_restaurant_path, class:"btn btn-link" %>

  <%= image_tag "https://s3.amazonaws.com/yelpdemo/Buildings.png" %>
